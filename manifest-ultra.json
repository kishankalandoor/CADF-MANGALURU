            "id": "123456789"
        }
    ],
    
    "prefer_related_applications": false,
    
    "share_target": {
        "action": "/share-target/",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "title",
            "text": "text",
            "url": "url",
            "files": [
                {
                    "name": "files",
                    "accept": ["image/*", "application/pdf"]
                }
            ]
        }
    },
    
    "protocol_handlers": [
        {
            "protocol": "web+cadfoundation",
            "url": "/handle-protocol/?type=%s"
        }
    ],
    
    "file_handlers": [
        {
            "action": "/handle-files",
            "accept": {
                "application/pdf": [".pdf"],
                "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
            }
        }
    ],
    
    "launch_handler": {
        "client_mode": ["navigate-existing", "navigate-new"]
    },
    
    "handle_links": "preferred",
    
    "edge_side_panel": {
        "preferred_width": 400
    },
    
    "display_override": [
        "window-controls-overlay",
        "minimal-ui",
        "standalone",
        "browser"
    ],
    
